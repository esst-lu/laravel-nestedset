{
  "name": "kalnoy/nestedset",
  "description": "Nested Set Model for Laravel 5.7 and up",
  "keywords": [
    "laravel",
    "nested sets",
    "nsm",
    "database",
    "hierarchy"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Kalnoy",
      "email": "lazychaser@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "illuminate/support": "^8.0 || ^9.0",
    "illuminate/database": "^8.0 || ^9.0",
    "illuminate/events": "^8.0 || ^9.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "orchestra/testbench": "^6.23 || ^7.0",
    "phpunit/phpunit": "^9.5"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
  },
  "autoload": {
    "psr-4": {
      "Kalnoy\\Nestedset\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Kalnoy\\Nestedset\\Test\\": "tests"
    }
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "laravel": {
      "providers": [
        "Kalnoy\\Nestedset\\NestedSetServiceProvider"
      ]
    }
  }
}
